{
  "compilerOptions": {
    "module": "commonjs",
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noImplicitReturns": false,
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": true,
  },
  "compileOnSave": true,
  "include": [
    "src"
  ]
}
